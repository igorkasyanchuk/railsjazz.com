= title @project.title

.page_container
  = link_to "back to portfolio", portfolio_path, :id => 'back'

.page_container.box_top
#project_page.box_middle
  .page_block.smaller_page_block
    #project
      %h1.left= link_to @project.title, @project.url, :target => "_blank"
      - if @project.url
        .link.right
          = link_to @project.url, @project.url
      .clear
      %p
        = simple_format @project.description
        = image_tag @project.image.url
        
      - @project.screenshots.by_priority.each do |screenshot|
        %p
          = simple_format screenshot.description
          = image_tag screenshot.image.url
          
      - if @project.technologies.present?
        %p
          %strong= @project.technologies
.page_container.box_bottom
  = link_to "back to portfolio", portfolio_path, :class => 'back_button'
